<Window x:Class="Clicking_Game_With_WPF_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clicking_Game_With_WPF_03"
        mc:Ignorable="d"
        Title="Clicky Game WPF C#"  Height="450" Width="800">
    <Canvas Name="MyCanvas" MouseLeftButtonDown="ClickOnCanvas" Background="DarkGray">
        <Label Name="txtScore" FontSize="20" FontWeight="Bold" Content="Score: 0" />
        <Label Name="txtLastScore" FontSize="20" FontWeight="Bold" Content="Last Score: 0" Foreground="Purple" Canvas.Left="142" />
        <Rectangle Name="healthBar" Stroke="Black" Width="350" Height="27" Fill="Red" Canvas.Left="434" />
    </Canvas>
</Window>
